package Ejercicios;

public class Scope {
    static int x = 10;

    private static int f1(int x) {
        x = 1;
        return x *= 2;
    }

    private static void f2() {
        x -= 1;
    }

    public static void main(String[] args) {
        Scope scope = new Scope();
        int x = 5;
        x = Scope.f1(x);
        System.out.println("x = " + x);
        System.out.println("x = " + scope.x);
        Scope.f2();
        x = f1(scope.x);
        System.out.println("x = " + x);
        System.out.println("x = " + scope.x);
        scope.x = Scope.f1(x);
        System.out.println("x = " + x);
        System.out.println("x = " + scope.x);
    }
}
